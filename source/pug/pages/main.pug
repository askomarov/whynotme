extends ../base/layout

block variables
  - const title = "Polymorphia"
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentPage = 0

  -
    var whyItems = [
      "For new businesses, naming options can seem quite limited. Short domains are very expensive, yet longer multi-word names don’t inspire confidence. ",
      "In 2021 many startups are choosing a short, branded name - a name that’s unique, memorable and affordable."
    ]

block main
  main
    section.promo
      .container
        .promo__wrapper
          .promo__image-wrapper
            .promo__scene.animate
              .wow.animate__animated.animate__bounceInDown(data-wow-duration="1.5s", data-wow-delay="0.01s", data-depth="0.6")
                +picture("content/promo", "logo-abstract", "webp", "338", "331", "image")
          .promo__content
            .promo__content-wrapper
              h1.promo__title.title Business name generator
                +icon("icon-plus", 39, 39)
              .promo__content-text
                p Generate a short, brandable business name using artificial intelligence.
        a.promo__scroll-button.js-scroll-link(href="#link")
          +icon("icon-scroll-down", 83, 83)
          .promo__scroll Scroll down
        .promo__ball-b.rellax(data-rellax-speed="4")
        .promo__ball-m.rellax(data-rellax-speed="1")
        .promo__ball-s.rellax(data-rellax-speed="2")
    .decor-wrapper.animate
      .decor-wrapper__line.wow.animate__animated.animate__slideInDown(data-wow-duration="3.8s", data-wow-offset="450")
      section.options
        h2(class="visually-hidden") Our options
        .container
          .options__wrapper
            .options__container-decor
            .options__content
              ul.options__list
                li.options__item.options__item--names.options__item--mobile-first-item
                  .options__item-wrapper
                    h3.title.options__sub-title Get name ideas
                    .options__text
                      p Polymorphia generates short, catchy names.
                li.options__item
                  .options__item-wrapper
                    h3.title.options__sub-title Filter results
                    .options__text
                      p Decide whether you want specific domain or not.
                li.options__item.options__item--mobile-second-item
                  .options__item-wrapper
                    h3.title.options__sub-title See Domains
                    .options__text
                      p View names only if domain is available.
                li.options__item
                  .options__item-wrapper
                    h3.title.options__sub-title Save your names
                      +icon("icon-plus", 39, 39).options__sub-title-icon
                    .options__text
                      p Access names generated by Polymorphia at any time.
                    a.options__button.button(href="#") try now
              .options__image-wrapper
                  +picture("content/options", "hand", "webp", "568", "675", "image")
            .options__ball-s.rellax(data-rellax-speed="2")
            .options__ball-b.rellax(data-rellax-speed="2")
      section.info
        .container
          .info__wrapper
            .info__header
              h2.title.info__title Why a branded #[span(class="text-orange") name?]
            .info__content
              .info__text
                each item in whyItems
                  p= item
    section.generate(id="link" data-min="0" data-max="6" data-price="25")
      .container
        .generate__wrapper
          h2.generate__title.title Generate your name
            +icon("icon-plus", 39, 39)
          .generate__range-wrapper
            .generate__text
              p 1 generation = 15 names
            form(action="#")
              input(class="js-generate-number" type="hidden" value="")
              input(class="js-generate-price" type="hidden" value="")
              .slider-step.generate__slider-step
              .generate__price-wrapper
                .generate__amount #[span(class="generate__number") 1] generation
                .generate__price
              button.generate__button.button Buy now
